{
  "name": "chiffrement-sandbox",
  "version": "0.0.0",
  "author": "Fran√ßois Best",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf .next/ build/ coverage/",
    "predev": "mkdir -p .volumes/logs",
    "dev": "NODE_OPTIONS=\"--trace-warnings\" ts-node ./src/server/main.ts | tee -i .volumes/logs/$(date +%Y-%m-%d_%H.%M.%S).ndjson | pino-pretty",
    "build": "run-p build:*",
    "build:next": "next build",
    "build:server": "swc ./src --copy-files --include-dotfiles --out-dir ./build --sync",
    "lint": "next lint -d src",
    "test": "run-p test:*",
    "test:types": "tsc",
    "test:unit": "jest --coverage",
    "start": "NODE_ENV=production node ./build/server/main.js",
    "keygen": "zx ./scripts/keygen.mjs",
    "db:start": "./scripts/db-start.sh",
    "db:stop": "./scripts/db-stop.sh",
    "db:migrations": "zx ./scripts/migrations.mjs"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.3.6",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@fastify/nextjs": "^9.2.0",
    "comlink": "^4.3.1",
    "dotenv": "^16.0.3",
    "etebase": "^0.43.1",
    "fastify": "^4.9.2",
    "fastify-micro": "4.0.0-beta.1",
    "fastify-plugin": "^4.3.0",
    "framer-motion": "^7.6.1",
    "libsodium-wrappers": "^0.7.10",
    "local-state-sync": "^1.0.0-beta.2",
    "mitata": "^0.1.6",
    "mitt": "^3.0.0",
    "next": "^12.3.1",
    "next-usequerystate": "^1.7.2",
    "postgres": "^3.3.1",
    "pretty-bytes": "^6.0.0",
    "pretty-ms": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "tweetnacl": "^1.0.3",
    "zod": "^3.19.1",
    "zod-to-json-schema": "^3.18.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.10",
    "@swc/helpers": "^0.4.12",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.0",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/node": "^18.11.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.25.0",
    "eslint-config-next": "^12.3.1",
    "events": "^3.3.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "zx": "^7.1.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  }
}
