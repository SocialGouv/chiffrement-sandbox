{
  "compilerOptions": {
    // Type checking
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    // Language & Environment
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    // Emit
    "noEmit": true,
    "declaration": false,
    "downlevelIteration": true,

    // Interop
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Misc
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.next/cache/.tsbuildinfo" // Team up with Next.js' incremental file
  },
  "ts-node": {
    "swc": true,
    "esm": true,
    "pretty": true,
    "logError": true // Not logging silently skips fastify-autoload errors
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
