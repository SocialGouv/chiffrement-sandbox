{
  "compilerOptions": {
    // Type checking
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      // Note: all paths are relative to baseUrl
      "modules/*": ["./modules/*"],
      "server/*": ["./server/*"],
      "client/*": ["./client/*"],
      "pages/*": ["./pages/*"],
      "tests/*": ["./tests/*"]
    },
    // Language & Environment
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    // Emit
    "noEmit": true,
    "declaration": false,
    "downlevelIteration": true,

    // Interop
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Misc
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.next/cache/.tsbuildinfo" // Team up with Next.js' incremental file
  },
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "logError": true, // Not logging silently skips fastify-autoload errors
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
